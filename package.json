{
  "name": "@zuplo/mcp",
  "version": "0.0.0",
  "description": "A WinterTC compliant TypeScript SDK for MCP",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:examples": "tsc -p tsconfig.examples.json",
    "build:all": "tsc && tsc -p tsconfig.examples.json",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest",
    "lint": "npx @biomejs/biome check src/",
    "lint:fix": "npx @biomejs/biome check src/ --fix",
    "lint:fix-unsafe": "npx @biomejs/biome check src/ --fix --unsafe",
    "format": "npx @biomejs/biome format src/ --write",
    "example:ping": "node dist/examples/server/ping/index.js"
  },
  "files": [
    "dist/**/**",
    "docs/**/**",
    "!**/*.spec.*",
    "!**/*.test.*",
    "!**/*.json",
    "!**/*.tsbuildinfo",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    "./jsonrpc2/validation": {
      "types": "./dist/jsonrpc2/validation.d.ts",
      "import": "./dist/jsonrpc2/validation.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zuplo/mcp-sdk.git"
  },
  "author": "engineering@zuplo.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zuplo/mcp-sdk/issues"
  },
  "homepage": "https://github.com/zuplo/mcp-sdk#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  }
}
